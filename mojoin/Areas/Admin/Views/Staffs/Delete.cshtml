@model mojoin.Models.User

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-header">
    <div class="header-sub-title">
        <nav class="breadcrumb breadcrumb-dash">
            <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Home</a>
            <a asp-area="Admin" asp-controller="Staffs" asp-action="Index" class="breadcrumb-item">Danh sách Nhân viên</a>
            <span class="breadcrumb-item active">Xác nhận xóa Nhân viên</span>
        </nav>
    </div>
</div>
@Html.AntiForgeryToken()
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Main content -->
    <section class="content">

        <!-- Default box -->
        <div class="card pt-2">
            <div class="card-header">
                <div class="row">
                    <div class="col-md-8  text-black">
                        <h3 class="card-title">Tiến hành xóa Nhân viên </h3>
                    </div>
                    <div class="col-md-4 text-black text-right">
                        <a class="btn btn-info btn-tone btn-sm" asp-action="Index"> Back to List</a>
                    </div>
                </div>
            </div>
            <div class="card-body">

                <dl class="row">
                    <dt class="col-sm-2">
                        Họ
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.LastName)
                    </dd>
                </dl>
                <dl class="row">
                    <dt class="col-sm-2">
                        Tên
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.FirstName)
                    </dd>
                </dl>
                <dl class="row">
                    <dt class="col-sm-2">
                        Số điện thoại
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Phone)
                    </dd>
                </dl>
                <dl class="row">
                    <dt class="col-sm-2">
                        Email
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Email)
                    </dd>
                </dl>
                <dl class="row">
                    <dt class="col-sm-2">
                        Địa chỉ
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Address)
                    </dd>
                </dl>
                <dl class="row">
                    <dt class="col-sm-2">
                        Giới tính
                    </dt>
                    <dd class="col-sm-10">
                        @if (Model.Sex == "0")
                        {
                            <span>Nam</span>
                        }
                        else if (Model.Sex == "1")
                        {
                            <span>Nữ</span>
                        }
                        else if (Model.Sex == "2")
                        {
                            <span>Khác</span>
                        }
                    </dd>
                </dl>

                <dl class="row">
                    <dt class="col-sm-2">
                        Ngày sinh
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Dateofbirth)
                    </dd>
                </dl>
                <dl class="row">
                    <dt class="col-sm-2">
                        Mật khẩu
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Password)
                    </dd>
                </dl>
                <dl class="row">
                    <dt class="col-sm-2">
                        Avatar
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Avatar)
                    </dd>
                </dl>
                <dl class="row">
                    <dt class="col-sm-2">
                        InfoZalo
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.InfoZalo)
                    </dd>
                </dl>
                <dl class="row">
                    <dt class="col-sm-2">
                        InfoFacebook
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.InfoFacebook)
                    </dd>
                </dl>

                <dl class="row">
                    <dt class="col-sm-2">
                        Ngày tạo
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.CreateDate)
                    </dd>
                </dl>
                <form asp-action="Delete">
                    <input type="submit" value="Xác nhận xóa" class="btn btn-danger" />
                </form>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->